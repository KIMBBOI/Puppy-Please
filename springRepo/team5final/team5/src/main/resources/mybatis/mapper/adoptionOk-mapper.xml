    <!-- 입양 승인 리스트 조회 -->
    <select id="list" resultType="com.kh.app.adoption.vo.AdoptionVo">
        SELECT *
    	FROM (
	        SELECT ROWNUM RNUM, T.*
	        FROM (
	        	SELECT
		        	A.ADOPTION_BOARD_NO
		        	, A.ADMIN_NO
				    , A.DEL_YN
				    , RD.IMAGE_NO 
				    , RD.DOG_NAME
				    , RD.BREED
				    , RD.GENDER_MF
				    , RD.NEUTERING_OX
				    , RD.AGE
				    , RD.WEIGHT
		        	, RD.ADOPTION_COMPLETE_YN
				    , I.IMAGE_PATH
				FROM
				    ADOPTION_BOARD A
					JOIN RESCUE_DOG RD 
						ON A.RESCUE_DOG_NO = RD.RESCUE_DOG_NO
					JOIN IMAGE I
				  		ON I.IMAGE_NO = RD.IMAGE_NO
				WHERE
				    A.DEL_YN = 'N'
				AND
					A.ADOPTION_COMPLETE_YN = 'Y'
				ORDER BY
				    A.ENROLL_DATE DESC
	    	) T
		)
    </select>

	<!--  -->
	<select id='listCount' resultType="Integer">
		SELECT 
			COUNT(*) as cnt 
		FROM 
			ADOPTION_BOARD 
		WHERE 
			DEL_YN = 'N'
		AND
			ADOPTION_COMPLETE_YN = 'N'
	</select>
	
	<!-- 상세조회 -->
	<select id="detail" resultType="com.kh.app.adoption.vo.AdoptionVo">
         SELECT
	        A.ADOPTION_BOARD_NO,
	        A.ADMIN_NO,
	        A.ENROLL_DATE,
	        A.MODIFY_DATE,
	        A.DEL_YN,
	        RD.RESCUE_DOG_NO,
	        RD.IMAGE_NO,
	        RD.DOG_NAME,
	        RD.BREED,
	        RD.GENDER_MF,
	        RD.NEUTERING_OX,
	        RD.AGE,
	        RD.WEIGHT,
	        RD.ADOPTION_COMPLETE_YN,
	        I.IMAGE_PATH
	    FROM
	        ADOPTION_BOARD A
	    JOIN
	        RESCUE_DOG RD ON A.RESCUE_DOG_NO = RD.RESCUE_DOG_NO
	    JOIN
	        IMAGE I ON I.IMAGE_NO = RD.IMAGE_NO
	    WHERE
	        A.DEL_YN = 'N'
	    AND
	        RD.ADOPTION_COMPLETE_YN ='Y'
	    AND 
	    	A.ADOPTION_BOARD_NO = #{adoptionBoardNo}
    </select>
    
	
	
